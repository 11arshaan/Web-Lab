---
// Item.astro
import { Image } from "astro:assets";
const { image, title, slug, description, tags } = Astro.props;
---

<div class="card">
    <a href={`/${slug}`} data-view-transition={slug} class="image-link">
        <Image src={image} alt={title} class="image" />
        <div class="description-container"><p>{description}</p></div>
    </a>
    <a class="title-link" href={`/${slug}`} data-view-transition={slug}>
    <div class="title-container">
        <h4 class="title">{title}</h4>
    </div>
    </a>
</div>

<style>
    .card {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        width: 100%;
        aspect-ratio: 1 / 1;
        /* background: white; */
        border-radius: 0.2rem;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        /* border: 1px solid yellowgreen; */
        user-select: none;
    }

    .image-link {
        position: relative;
        width: 100%;
        flex-grow: 1;
        user-select: none;
    }

    .image {
        width: 100%;
        height: 100%;
        position: relative;
        object-fit: cover;
        user-select: none;
    }

    /* Hover overlay */
    .description-container {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        background-color: rgba(0, 0, 0, 0.9);
        color: var(--content-main);
        font-size: 0.9rem;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
        text-align: center;
        font-family: "Exo2", sans-serif;
        pointer-events: none;
        user-select: none;
    }

    .image-link:hover .description-container {
        opacity: 1;
        pointer-events: auto;
        user-select: none;
    }

    /* Text */
    .title-container {
        display: flex;
        align-items: center;
        padding: 0;
        height: min-content;
        background-color: #0e0e0e;
        border: 1px solid #222222;
        border-radius: 0 0 .2rem .2rem;
        pointer-events: none;
        text-decoration: none;
        user-select: none;
    }
    .title {
        font-size: 16px;    
        padding: 0;
        margin: 5px auto;
        font-family: "Exo2", sans-serif;
        font-weight: 200;
        pointer-events: none;
        color: var(--content-main);
        text-decoration: none;
        user-select: none;
    }

    .title-link {
        text-decoration: none;
        pointer-events: none;
        user-select: none;
    }
    .title-link:visited {
    color: inherit;
    text-decoration: none;
    pointer-events: none;
    user-select: none;
}
</style>
